{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "faker": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "./dist/**"]
    },
    "start": {
      "dependsOn": ["build", "lint"]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "APP_ENV",
    "PORT",
    "OPENAI_API_KEY",
    "DEEPL_API_KEY",
    "SENTRY_AUTH_TOKEN",
    "REDIS_URL",
    "FRONTEND_URL",
    "BACKEND_URL",
    "WS_URL",
    "RAILWAY_VOLUME_MOUNT_PATH",
    "NEXT_PUBLIC_SENTRY_DSN",
    "SENTRY_DSN",
    "SENTRY_IGNORE_API_RESOLUTION_ERROR",
    "HAISHIN_VERSION"
  ]
}
