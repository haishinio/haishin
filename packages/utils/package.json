{
  "name": "@haishin/utils",
  "description": "Transcriber Utils for use within @haishin/*",
  "version": "3.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap --outDir ./dist",
    "build:ts": "bun build ./src/index.ts ./src/get-duration.ts ./src/seconds-to-duration.ts ./src/set-file-name.ts ./src/url-utils.ts --outdir ./dist --splitting",
    "build": "npm run build:types && npm run build:ts",
    "watch": "bun run build:ts -- --watch"
  },
  "keywords": [],
  "author": "",
  "dependencies": {
    "@ctrl/ts-base32": "^2.1.3",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@haishin/tsconfig": "workspace:*",
    "@types/node": "^20.4.1",
    "@types/uuid": "^9.0.2",
    "eslint": "^8.44.0",
    "eslint-config-haishin": "workspace:*",
    "typescript": "^5.1.6"
  }
}
